@page
@model Quran_Memorizing_System.Pages.SignUp_Page
@{
}

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/css/bootstrap-datepicker.min.css" />
    <style>
        .signup-wrapper {
            max-width: 520px;
            margin: 60px auto;
        }

        .section-title {
            font-size: 28px;
            font-weight: 700;
            text-align: center;
        }

        .section-divider {
            width: 70px;
            height: 3px;
            background: #333;
            border-radius: 3px;
            margin: 10px auto 25px;
        }

        .admin-box {
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            border: 1px solid #e1e1e1;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
        }

        .admin-label {
            font-weight: 600;
        }

        .form-control, .form-select {
            border-radius: 6px;
        }

        .btn-main {
            border-radius: 6px;
            background: #222;
            color: white;
        }

        .btn-main:hover {
            background: #000;
        }

        a {
            text-decoration: none;
        }
    </style>
}


<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">

            <form method="post" class="signup-wrapper">

                <section class="mb-4">
                    <div class="section-title">Register</div>
                    <div class="section-divider"></div>

                    <div class="admin-box">

                        <div class="mb-3">
                            <label class="admin-label" for="fullname">Full Name</label>
                            <input type="text" id="fullname" class="form-control" placeholder="Full Name" asp-for="@Model.user.UserName">
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.UserName"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="email">E-mail</label>
                            <input type="email" id="email" class="form-control" placeholder="E-mail" asp-for="@Model.user.Email">
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.Email"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="phone">Phone</label>
                            <input type="text" id="phone" class="form-control" placeholder="Phone" asp-for="@Model.user.PhoneNumber">
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.PhoneNumber"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="visablephone">Do you want your phone visiable ?</label>
                            <input type="checkbox" id="visablephone" asp-for="@Model.user.PhoneVisability" />
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="password">Password</label>
                            <input type="password" id="password" class="form-control" placeholder="Password" asp-for="@Model.user.Password">
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.Password"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="confirmPassword">Confirm Password</label>
                            <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm Password" asp-for="@Model.user.confirmPassword">
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.confirmPassword"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="birthdate">Birth Date</label>
                            
                            <input type="text" id="birthdate" class="form-control datepicker" placeholder="dd-mm-yyyy" autocomplete="off" asp-for="@Model.user.DateOfBirth">
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.DateOfBirth"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="gender">Gender</label>
                            <select id="gender" class="form-select" asp-for="@Model.user.gender">
                                <option selected disabled>Select gender</option>
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.gender"></span>
                        </div>


                        <div class="mb-3">
                            <label class="admin-label" for="role">Role</label>
                            <select id="role" class="form-select" asp-for="@Model.user.role">
                                <option selected disabled>Select role</option>
                                <option>Participant</option>
                                <option>Sheikh</option>
                            </select>
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.user.role"></span>
                        </div>



                        <button type="submit" class="btn btn-main w-100 mt-2">
                            Register
                        </button>

                        <div class="text-center mt-3">
                            <a asp-page="/Login_Page">Have an account? Sign In</a>
                        </div>

                    </div>
                </section>
            </form>

        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.10.0/js/bootstrap-datepicker.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                format: 'dd-mm-yyyy',
                autoclose: true,
                todayHighlight: true
            });
        });
    </script>
}
