@page
@model Quran_Memorizing_System.Pages.LessonsSearchModel
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/lessons.css" asp-append-version="true" />
}

<div class="container row pt-3">
    <!-- Left: Search + lessons -->
    <div class="col-lg-8">
        <!-- Search -->
        <div class="search-wrapper mb-4 d-flex align-items-center">
            <input type="text"
                   class="form-control border-0 shadow-0"
                   placeholder="Search">
            <button class="btn btn-dark ms-3 px-4">
                <i class="bi bi-search me-1"></i> Enter
            </button>
        </div>

        <!-- Lesson cards -->
        @foreach (var lesson in Model.Lessons)
        {
            <div class="lesson-card">
                <div class="d-flex align-items-start">
                    <div class="lesson-radio"></div>
                    <div>
                        <div class="lesson-label">@lesson.Instructor</div>
                        <div class="lesson-title">@lesson.Title</div>
                        <div class="small fw-semibold">(@string.Join(", ", lesson.Tags))</div>
                    </div>
                </div>
                <button class="btn btn-dark watch-btn">Watch</button>
            </div>
        }
    </div>

    <!-- Right: Filters -->
    <div class="col-lg-4 mt-4 mt-lg-0">
        <h5 class="filters-title">FILTERS</h5>
        <form class="filters-box">
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" id="tag1">
                <label class="form-check-label" for="tag1">Tag One</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="tag2">
                <label class="form-check-label" for="tag2">Tag Two</label>
            </div>
            <button class="btn btn-dark watch-btn mt-2">Apply</button>
        </form>
    </div>
</div>