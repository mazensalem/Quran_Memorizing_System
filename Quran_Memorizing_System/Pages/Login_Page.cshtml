@page
@model Quran_Memorizing_System.Pages.Login_Page
@{
}

@section Styles {
        <style>
            .login-wrapper {
                max-width: 450px;
                margin: 90px auto;
            }

            .section-title {
                font-size: 24px;
                font-weight: 600;
                text-align: center;
            }

            .section-divider {
                width: 60px;
                height: 3px;
                background: #333;
                border-radius: 3px;
                margin: 10px auto 25px;
            }

            .admin-box {
                background: #ffffff;
                padding: 25px 30px;
                border-radius: 10px;
                border: 1px solid #e1e1e1;
                box-shadow: 0 3px 8px rgba(0,0,0,0.05);
            }

            .admin-label {
                font-weight: 600;
            }

            .form-control {
                border-radius: 6px;
            }

            .btn-dark {
                border-radius: 6px;
            }

            a {
                text-decoration: none;
            }
        </style>
}
<div class="container">
    <div class="row justify-content-center">
        
        <div class="col-lg-5">

            <form method="post" class="login-wrapper">

                <section class="mb-4">
                    <div class="section-title">Login</div>
                    <div class="section-divider"></div>

                    <div class="admin-box">

                        <div class="mb-3">
                            <label class="admin-label" for="email">Email</label>
                            <input type="text" id="email" class="form-control" placeholder="Enter Email" asp-for="@Model.Email">
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.Email"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="password">Password</label>
                            <input type="password" id="password" class="form-control" placeholder="Enter password" asp-for="@Model.Password">
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.Password"></span>
                        </div>

                        <div class="mb-3">
                            <label class="admin-label" for="role">Role</label>
                            <select id="role" class="form-select" asp-for="@Model.role">
                                <option selected disabled>Select role</option>
                                <option>Participant</option>
                                <option>Sheikh</option>
                            </select>
                            <br />
                            <span class="invalid-feedback d-block" asp-validation-for="@Model.role"></span>
                        </div>

                        <button type="submit" class="btn btn-dark w-100 mt-2">
                            Login
                        </button>

                        <div class="text-center mt-3">
                            <a asp-page="/Forgot_Password">Forgot your password?</a>
                        </div>

                    </div>
                </section>

            </form>

        </div>
    </div>
</div>

