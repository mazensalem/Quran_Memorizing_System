@page
@model Quran_Memorizing_System.Pages.ViewCreatedExamsModel
@{
    @using System.Data;
}

@section Styles {
    <link rel="stylesheet" href="~/css/exams-list.css" asp-append-version="true" />
}

<div class="container pt-4">
    <h2 class="mb-3">Created Exams</h2>

    <div class="created-exams-list">
        @foreach (DataRow exam in Model.CreatedExams.Rows)
        {
            <div class="exam-item">
                <div class="exam-title">@exam["Title"]</div>
                <div class="exam-actions">
                    <a href="/ViewSubExam?ExamID=@exam["Exam_ID"]"
                       class="btn btn-outline-primary btn-sm me-2">
                        View Submissions
                    </a>

                    <form asp-page-handler="Delete" method="post" class="d-inline"
                          onsubmit="return confirm('Delete this exam?');">
                        <input type="hidden" name="examid" value="@exam["Exam_ID"]" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
