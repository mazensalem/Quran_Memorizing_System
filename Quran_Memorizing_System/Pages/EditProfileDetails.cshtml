@page
@model Quran_Memorizing_System.Pages.EditProfileDetailsModel
@{
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-black text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle"></i> Edit Profile
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        
                        <!-- Username -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Username</label>
                            <input class="form-control" placeholder="Enter your name" asp-for="@Model.user.UserName" />
                            <span class="text-danger" asp-validation-for="@Model.user.UserName"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input class="form-control" asp-for="@Model.user.Email" readonly />
                            <small class="text-muted">Email cannot be changed</small>
                        </div>

                        <!-- Phone Number -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Phone Number</label>
                            <input class="form-control" placeholder="Enter your phone number" asp-for="@Model.user.PhoneNumber" />
                            <span asp-validation-for="@Model.user.PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Phone Visibility -->
                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" asp-for="@Model.user.PhoneVisability" />
                                <label class="form-check-label">
                                    Make my phone number visible to others
                                </label>
                            </div>
                        </div>

                        <!-- Date of Birth -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Date of Birth</label>
                            <input class="form-control" type="date" asp-for="@Model.user.DateOfBirth" />
                            <span asp-validation-for="@Model.user.DateOfBirth" class="text-danger"></span>
                        </div>

                        <!-- Gender -->
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Gender</label>
                            <select id="gender" class="form-select" asp-for="@Model.user.gender">
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                            <span asp-validation-for="@Model.user.gender" class="text-danger"></span>
                        </div>

                        <!-- Role (Read-only) -->
                        <div class="form-group mb-4">
                            <label class="form-label fw-bold">Role</label>
                            <input class="form-control" asp-for="@Model.user.role" readonly />
                            <small class="text-muted">Role cannot be changed</small>
                        </div>

                        <hr />

                        <!--Buttons-->
                        <div class="d-flex justify-content-between align-items-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a asp-page="/Profile" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                    <a asp-page="/editPassword"> Change password </a>
                </div>
            </div>

        </div>
    </div>
</div>