@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    @using System.Data;
}

<div class="d-flex flex-row justify-content-between home-layout">
    <div class="d-flex flex-column col-md-9 mt-4">

        @if (!Model.isAdmin)
        {
            <!-- booking div -->
            <div class="d-flex justify-content-center">
                <div class="d-flex align-items-center justify-content-between booking-banner w-75">
                    <label class="ms-2 fw-semibold mb-0">
                        Wanna Book a session
                    </label>

                    <a href="/Book_Sessions" class="btn px-4 py-2 text-decoration-none">
                        Book now
                    </a>
                </div>
            </div>
        }

        <!-- circle cards -->
        <div class="d-flex flex-row justify-content-between col-md-9 m-4 flex-wrap circles-wrapper">
            @foreach (DataRow circle in Model.Circles.Rows)
            {
                <a asp-page="/Memorization_Circle"
                   asp-route-name="@circle["Name"]"
                   class="card circle-card shadow-sm text-decoration-none mt-3">
                    <div class="circle-card-header">
                        <i class="bi bi-bookmarks"></i>
                    </div>

                    <div class="card-body">
                        <h6 class="card-title mb-1">@circle["Name"]</h6>
                        <div class="d-flex align-items-center text-muted mt-2 circle-visibility">
                            <i class="bi bi-person"></i>
                            @if ((bool)circle["Public_Avaliable"])
                            {
                                <span class="public-badge">Public</span>
                            }
                            else
                            {
                                <span class="private-badge">Private</span>
                            }
                        </div>
                    </div>
                </a>
            }
        </div>

        @if (Model.user.isverified)
        {
            <div class="add-circle-box col-md-9">
                <h6>Add a circle</h6>
                <form method="post" asp-page-handler="Addcircule" class="row g-2 align-items-center">
                    <div class="col-md-6">
                        <label class="form-label mb-1">Name</label>
                        <input asp-for="@Model.newcirculename" class="form-control" />
                        <span asp-validation-for="@Model.newcirculename" class="text-danger small"></span>
                    </div>

                    <div class="col-md-3 form-check mt-4">
                        <input asp-for="@Model.ispublic" type="checkbox" class="form-check-input" id="isPublicCheck" />
                        <label class="form-check-label" for="isPublicCheck">Public</label>
                    </div>

                    <div class="col-md-3 mt-4 text-end">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        }
    </div>

    <!-- notifications -->
    <div class="col-md-2 m-4">
        <div class="p-3 notifications-card">
            <h5 class="fw-bold mb-3">Notifications</h5>

            @foreach (var noti in Model.Notifications)
            {
                <div class="d-flex mb-2 notification-item">
                    <div class="me-2">
                        <i class="bi bi-bell text-primary fs-5"></i>
                    </div>
                    <div>
                        <p class="mb-1 fw-semibold">@noti.Message</p>
                        <small class="text-muted">@noti.TimeAgo</small>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
