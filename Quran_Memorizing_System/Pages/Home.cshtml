@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- booking div -->
<div class="container d-flex justify-content-center mt-5">
    <div class="d-flex align-items-center justify-content-between border rounded-3 p-3 w-75">

        <!-- Label -->
        <label class="ms-5 fw-semibold">
            Wanna Book a session
        </label>

        <!-- Button -->
        <button class="btn btn-dark px-4 py-2">
            Book now
        </button>

        

    </div>
</div>
<!-- circle  cards -->
@foreach (var circle in Model.Circles)
{
    <div class="card shadow-sm border rounded-4" style="width: 18rem;">
        <div class="bg-light rounded-top-4 d-flex justify-content-center align-items-center" style="height: 120px;">
            <img src="@circle.ImageUrl" class="img-fluid" />
        </div>

        <div class="card-body">
            <h6 class="card-title mb-1">@circle.Name</h6>
            <div class="d-flex align-items-center text-muted mt-2">
                <i class="bi bi-person"></i>
                <span class="ms-1">@circle.AdminName</span>
            </div>
        </div>
    </div>
}
<!--notfication cards -->
<div class="col-md-4">
    <div class="p-3 border rounded-4 shadow-sm bg-white">

        <h5 class="fw-bold mb-3">Notifications</h5>

        @foreach (var noti in Model.Notifications)
        {
            <div class="d-flex mb-3">
                <div class="me-2">
                    <i class="bi bi-bell text-primary fs-4"></i>
                </div>
                <div>
                    <p class="mb-1 fw-semibold">@noti.Message</p>
                    <small class="text-muted">@noti.TimeAgo</small>
                </div>
            </div>
        }

    </div>
</div>



