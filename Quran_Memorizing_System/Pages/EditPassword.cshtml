@page
@model Quran_Memorizing_System.Pages.EditPasswordModel
@{
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />
}

<div class="change-password-wrapper container">
    <div class="change-password-card">
        <h5 class="change-password-title">Change Password</h5>

        <form method="post">
            <!-- Current Password -->
            <div class="form-group mb-3">
                <label class="form-label">Current Password</label>
                <input type="password" class="form-control"
                       placeholder="Enter current password" asp-for="@Model.oldpassword" />
                <span class="text-danger" asp-validation-for="@Model.oldpassword"></span>
            </div>

            <!-- New Password -->
            <div class="form-group mb-3">
                <label class="form-label">New Password</label>
                <input type="password" class="form-control"
                       placeholder="Enter new password" asp-for="@Model.newpassword" />
                <span class="text-danger" asp-validation-for="@Model.newpassword"></span>
            </div>

            <!-- Confirm New Password -->
            <div class="form-group mb-4">
                <label class="form-label">Confirm New Password</label>
                <input type="password" class="form-control"
                       placeholder="Confirm new password" asp-for="@Model.newpasswordconfirm" />
                <span class="text-danger" asp-validation-for="@Model.newpasswordconfirm"></span>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between align-items-center change-password-actions">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-page="/Profile" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
