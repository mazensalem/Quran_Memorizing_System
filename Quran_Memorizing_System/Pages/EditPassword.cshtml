@page
@model Quran_Memorizing_System.Pages.EditPasswordModel
@{
}
<div class="container w-50">
    <form method="post">

        <!-- Change Password Section -->
        <h5 class="mb-3">Change Password</h5>

        <!-- Current Password -->
        <div class="form-group mb-3">
            <label class="form-label fw-bold">Current Password</label>
            <input type="password" class="form-control" placeholder="Enter current password" asp-for="@Model.oldpassword" />
            <span class="text-danger" asp-validation-for="@Model.oldpassword"></span>
        </div>

        <!-- New Password -->
        <div class="form-group mb-3">
            <label class="form-label fw-bold">New Password</label>
            <input type="password" class="form-control" placeholder="Enter new password" asp-for="@Model.newpassword" />
            <span class="text-danger" asp-validation-for="@Model.newpassword"></span>
        </div>

        <!-- Confirm New Password -->
        <div class="form-group mb-4">
            <label class="form-label fw-bold">Confirm New Password</label>
            <input type="password" class="form-control" placeholder="Confirm new password" asp-for="@Model.newpasswordconfirm" />
            <span class="text-danger" asp-validation-for="@Model.newpasswordconfirm"></span>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between align-items-center">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="bi bi-check-circle"></i> Save Changes
            </button>
            <a asp-page="/Profile" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </div>
    </form>
</div>