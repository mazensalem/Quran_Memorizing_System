@page
@model Quran_Memorizing_System.Pages.Book_SessionsModel
@{
    Layout = "_Layout";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Book_Sessions.css" asp-append-version="true" />
}

<div class="booking-container">


    <!-- MAIN CARD -->
    <section class="booking-card">
        <h2 class="title">Booking Details</h2>
        <h4 class="subtitle">Booking Information</h4>

        <form method="post" class="booking-form">

            <div class="input-row">
                <input type="text" name="Name" placeholder="Name" required />
                <input type="text" name="ContactNumber" placeholder="Contact Number" required />
            </div>

            <input type="email" name="Email" placeholder="Email Address" required />

            <!-- DATE + TIME ROW -->
            <div class="input-row">
                <input type="date" name="Date" placeholder="Date" class="half-input" required />
                <input type="time" name="Time" placeholder="Time" class="half-input" required />
            </div>

            <!-- START + END PAGE (new line & centered) -->
            <div class="page-row">
                <div class="page-box">
                    <label>Start Page</label>
                    <input type="number" name="StartPage" />
                </div>

                <div class="page-box">
                    <label>End Page</label>
                    <input type="number" name="EndPage" />
                </div>
            </div>


            <button type="submit" class="next-btn">NEXT</button>

        </form>
    </section>

    

</div>
