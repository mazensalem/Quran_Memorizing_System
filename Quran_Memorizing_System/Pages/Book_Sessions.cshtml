@page
@model Quran_Memorizing_System.Pages.Book_SessionsModel
@{
    Layout = "_Layout";
}

<div class="booking-container">

    <!-- HEADER NAV (placeholder) -->
    <header class="booking-nav">
        <div class="logo-box"></div>
        <nav>
            <a href="#">Nav Item</a>
            <a href="#">Nav Item</a>
            <a href="#">Nav Item</a>
        </nav>
        <div class="close-btn">✕</div>
    </header>

    <!-- MAIN CARD -->
    <section class="booking-card">
        <h2 class="title">Booking Details</h2>
        <h4 class="subtitle">Booking Information</h4>

        <form method="post" class="booking-form">

            <div class="input-row">
                <input type="text" name="Name" placeholder="Name" required />
                <input type="text" name="ContactNumber" placeholder="Contact Number" required />
            </div>

            <input type="email" name="Email" placeholder="Email Address" required />

            <div class="input-row">
                <div class="time-input">
                    <input type="time" name="Time" />
                </div>

                <button type="button" class="small-btn">START PAGE</button>
                <button type="button" class="small-btn">END PAGE</button>
            </div>

            <button type="submit" class="next-btn">NEXT</button>

        </form>
    </section>

    <!-- FOOTER -->
    <footer class="footer">
        <div class="footer-col">
            <h3>Logo</h3>
            <p>Our vision is to provide convenience and help increase your sales business.</p>
        </div>

        <div class="footer-col">
            <h3>About</h3>
            <a href="#">How it works</a>
        </div>

        <div class="footer-col">
            <h3>Community</h3>
            <a href="#">Events</a>
        </div>

        <div class="footer-col">
            <h3>Socials</h3>
            <a href="#">Discord</a>
            <a href="#">Instagram</a>
        </div>
    </footer>

</div>
