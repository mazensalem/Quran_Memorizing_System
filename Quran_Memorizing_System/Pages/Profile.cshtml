@page
@model Quran_Memorizing_System.Pages.ProfileModel
@{
}

@section Styles{
    <link rel="stylesheet" href="~/css/profile.css" />
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">

            <div class="edit-profile-wrapper">
                <div class="card edit-profile-card">
                    <div class="card-header text-white d-flex align-items-center gap-2">
                        <i class="bi bi-person-circle fs-4"></i>
                        <h3 class="mb-0">My Profile</h3>
                    </div>

                    <div class="card-body">

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <span class="form-label"><i class="bi bi-person-fill me-2"></i>Full Name</span>
                            </div>
                            <div class="col-sm-8">
                                <span class="fw-medium">@Model.user.UserName</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <span class="form-label"><i class="bi bi-envelope-fill me-2"></i>Email</span>
                            </div>
                            <div class="col-sm-8">
                                <span class="fw-medium">@Model.user.Email</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <span class="form-label"><i class="bi bi-shield-fill me-2"></i>Role</span>
                            </div>
                            <div class="col-sm-8">
                                <span class="badge bg-success">@Model.user.role</span>
                            </div>
                        </div>

                        @if (Model.user.role != "Admin")
                        {
                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <span class="form-label"><i class="bi bi-telephone-fill me-2"></i>Phone</span>
                            </div>
                            <div class="col-sm-8">
                                    <span class="fw-medium">@Model.user.PhoneNumber</span>
                                    @if (Model.user.PhoneVisability)
                                    {
                                        <span class="badge bg-info ms-2">Public</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary ms-2">Private</span>
                                    }
                            </div>
                        </div>
                        

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <span class="form-label"><i class="bi bi-calendar-fill me-2"></i>Birth Date</span>
                            </div>
                            <div class="col-sm-8">
                                <span class="fw-medium">@Model.user.DateOfBirth</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4">
                                <span class="form-label"><i class="bi bi-gender-ambiguous me-2"></i>Gender</span>
                            </div>
                            <div class="col-sm-8">
                                <span class="fw-medium">@Model.user.gender</span>
                            </div>
                        </div>
                        }

                        @if (Model.user.role == "Sheikh")
                        {
                            <div class="row mb-3">
                                <div class="col-sm-4">
                                    <span class="form-label"><i class="bi bi-patch-check-fill me-2"></i>Status</span>
                                </div>
                                <div class="col-sm-8">
                                    @if (Model.user.isverified)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Verified</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-clock me-1"></i>Under Review</span>
                                    }
                                </div>
                            </div>
                        }

                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="edit-profile-actions d-flex flex-wrap justify-content-center gap-2 mt-4">
                    @if (Model.user.role != "Admin")
                    {                        
                        <a asp-page="/EditProfileDetails" class="btn btn-primary">
                            <i class="bi bi-pencil-square me-1"></i>Edit Details
                        </a>
                    }

                    @if (Model.user.role == "Admin")
                    {
                        <a asp-page="/AdmitSheikh" class="btn btn-success">
                            <i class="bi bi-person-plus me-1"></i>Admit Shieks
                        </a>
                        <a asp-page="/AdminDashboard" class="btn btn-primary">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    }else if (Model.user.role == "Sheikh" && Model.user.isverified)
                    {
                        <a href="/ViewAllrequests" class="btn btn-outline-primary">
                            <i class="bi bi-list-check me-1"></i>Pending Sessions
                        </a>
                    }
                    else
                    {
                        <a asp-page="/ViewRequestedSessions" class="btn btn-outline-primary">
                            <i class="bi bi-calendar-event me-1"></i>Requested Sessions
                        </a>
                        <a asp-page="/AvailableExams" class="btn btn-outline-success">
                            <i class="bi bi-journal-text me-1"></i>Exams
                        </a>
                    }

                    @if (Model.user.role != "Admin")
                    {                        
                        <!-- Delete Account Button -->
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                            <i class="bi bi-trash me-1"></i>Delete Account
                        </button>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<!-- Confirmation Modal with Password -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteAccountModalLabel">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirm Account Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <strong><i class="bi bi-exclamation-circle me-1"></i>Warning!</strong> This action cannot be undone.
                    </div>
                    <p>Please enter your password to confirm account deletion:</p>
                    <div class="form-group">
                        <label for="confirmPassword" class="form-label">Password</label>
                        <input type="password" class="form-control" id="confirmPassword" asp-for="@Model.password" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger"><i class="bi bi-trash me-1"></i>Delete My Account</button>
                </div>
            </form>
        </div>
    </div>
</div>