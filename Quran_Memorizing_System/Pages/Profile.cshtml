@page
@model Quran_Memorizing_System.Pages.ProfileModel
@{
}

@section Styles {
    <style>
        .profile-wrapper {
            max-width: 520px;
            margin: 60px auto;
        }

        .section-title {
            font-size: 28px;
            font-weight: 700;
            text-align: center;
        }

        .section-divider {
            width: 70px;
            height: 3px;
            background: #333;
            border-radius: 3px;
            margin: 10px auto 25px;
        }

        .admin-box {
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            border: 1px solid #e1e1e1;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
        }

        .profile-item {
            margin-bottom: 16px;
        }

        .profile-label {
            font-weight: 600;
            color: #555;
        }

        .profile-value {
            font-weight: 500;
        }
    </style>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="close btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close btn btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            
            <div class="profile-wrapper">

                <section class="mb-4">
                    <div class="section-title">My Profile</div>
                    <div class="section-divider"></div>

                    <div class="admin-box">

                        <div class="profile-item">
                            <div class="profile-label">Full Name</div>
                            <div class="profile-value">@Model.user.UserName</div>
                        </div>

                        <div class="profile-item">
                            <div class="profile-label">Email</div>
                            <div class="profile-value">@Model.user.Email</div>
                        </div>

                        <div class="profile-item">
                            <div class="profile-label">Role</div>
                            <div class="profile-value">@Model.user.role</div>
                        </div>

                        <div class="profile-item">
                            <div class="profile-label">Phone</div>
                            <div class="profile-value">
                                @Model.user.PhoneNumber
                                @if (Model.user.PhoneVisability)
                                {
                                    <span class="opacity-50"> (public)</span>
                                }
                                else
                                {
                                    <span class="opacity-50"> (private)</span>
                                }
                            </div>
                        </div>

                        <div class="profile-item">
                            <div class="profile-label">Birth Date</div>
                            <div class="profile-value">@Model.user.DateOfBirth</div>
                        </div>

                        <div class="profile-item">
                            <div class="profile-label">Gender</div>
                            <div class="profile-value">@Model.user.gender</div>
                        </div>

                        @if (Model.user.role == "Sheikh")
                        {
                            <div class="profile-item">
                                <div class="profile-label">Status</div>
                                @if (Model.user.isverified){
                                    <div class="profile-value text-success">Verified</div>
                                }else{
                                    <div class="profile-value text-warning">Under Review</div>
                                }
                            </div>
                        }

                    </div>
                </section>

            </div>

            <div class="d-flex justify-content-around">
                <a asp-page="/EditProfileDetails" type="submit" class="btn btn-info">Edit Details</a>
                
                @if (Model.user.role == "Sheikh" && Model.user.isverified)
                {                
                    <a asp-page="/AdmitSheikh" type="submit" class="btn btn-success">Admit Others</a>
                }


                <!-- Delete Account Button -->
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                    Delete Account
                </button>
                
                
                <!-- Confirmation Modal with Password -->
                <div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <form method="post" asp-page-handler="Delete">
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title" id="deleteAccountModalLabel">
                                        Confirm Account Deletion
                                    </h5>
                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="alert alert-warning">
                                        <strong>Warning!</strong> This action cannot be undone.
                                    </div>
                                    <p>Please enter your password to confirm account deletion:</p>
                                    <div class="form-group">
                                        <label for="confirmPassword">Password</label>
                                        <input type="password" class="form-control" id="confirmPassword" asp-for="@Model.password" required>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete My Account</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>