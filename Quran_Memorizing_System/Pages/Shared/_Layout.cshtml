@{
    var isLoggedIn = Context.Session.GetString("email") != null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quran_Memorizing_System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Quran_Memorizing_System.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)

</head>
<body>
    <header>
        <!-- Top Nav -->
        <nav class="navbar top-navbar bg-white">
            <div class="container-fluid d-flex align-items-center">
                <a asp-page="/Index" class="logo-placeholder me-4 text-decoration-none text-black">
                    LOGO
                </a>

                <ul class="navbar-nav flex-row">
                    <li class="nav-item me-3"><a class="nav-link" href="/LessonsSearch"> Lessons </a></li>
                    <li class="nav-item me-3"><a class="nav-link" href="/SearchCircuits">circles</a></li>
                    <li class="nav-item me-3"><a class="nav-link" href="/Book_Sessions">Book Session</a></li>
                </ul>

                <div class="ms-auto">
                    <!-- Profile dropdown: opens sign in / sign up choices -->
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary profile-btn d-flex align-items-center justify-content-center dropdown-toggle"
                                type="button"
                                id="profileDropdown"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                            <i class="bi bi-person"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            @if (isLoggedIn)
                            {
                                <li><a class="dropdown-item" href="/Profile">Profile</a></li>
                                <li><a class="dropdown-item" href="/logout">Log out</a></li>

                            }
                            else
                            {
                                <li><a class="dropdown-item" href="/Login_Page">Sign in</a></li>
                                <li><a class="dropdown-item" href="/SignUp_Page">Sign up</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    
    <footer class="border-top footer text-muted">
        <p class="footer-text small">
            &copy; 2025 - Quran_Memorizing_System - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
