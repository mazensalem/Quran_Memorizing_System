@page
@model Quran_Memorizing_System.Pages.EditLessonModel
@{
}

@section Styles {
        <link rel="stylesheet" href="~/css/lessons.css" asp-append-version="true" />
}

<div class="container pt-4" style="max-width: 600px;">
    <h3 class="fw-bold mb-4">Edit Lesson</h3>

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Lesson ID</label>
            <input asp-for="Lesson_ID" class="form-control" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Title</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <input asp-for="Location" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Availability</label>
            <input asp-for="Availability" class="form-control" />
        </div>

        <div class="mb-4">
            <label class="form-label">Lesson URL</label>
            <input asp-for="LessonUrl" class="form-control" />
        </div>

        <div class="d-flex justify-content-start gap-2">
            <button type="submit" class="btn btn-warning px-4">
                <i class="bi bi-save me-1"></i> Update Lesson
            </button>
            <a href="/LessonsSearch" class="btn btn-dark px-4">
                <i class="bi bi-x-circle me-1"></i> Cancel
            </a>
        </div>
    </form>
</div>
