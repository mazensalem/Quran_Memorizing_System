@page
@{
    ViewData["Title"] = "Forgot Password";
}

@section Styles {
    <style>
        .forgot-wrapper {
            max-width: 480px;
            margin: 80px auto;
        }

        .section-title {
            font-size: 24px;
            font-weight: 600;
            text-align: center;
        }

        .section-divider {
            width: 60px;
            height: 3px;
            background: #333;
            border-radius: 3px;
            margin: 10px auto 25px;
        }

        .admin-box {
            background: #fff;
            padding: 25px 30px;
            border-radius: 10px;
            border: 1px solid #e1e1e1;
            box-shadow: 0 3px 8px rgba(0,0,0,0.05);
        }

        .admin-label {
            font-weight: 600;
        }

        .form-control {
            border-radius: 6px;
        }

        .btn-main {
            border-radius: 6px;
            background: #222;
            color: white;
        }

            .btn-main:hover {
                background: #000;
            }
    </style>
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="forgot-wrapper">
            <section class="mb-4">
                <div class="section-title">Forgot Password</div>
                <div class="section-divider"></div>

                <div class="admin-box">
                    <p class="text-muted">Enter your email and we'll send you a reset code.</p>

                    <form method="post">
                        <div class="mb-3">
                            <label class="admin-label" for="email">Email Address</label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" required />
                        </div>
                        <button type="submit" class="btn btn-main w-100">Send Reset Code</button>
                    </form>

                    @if (Request.Method == "POST")
                    {
                        <div class="alert alert-success mt-3">
                            ✅ Reset code sent to your email.
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>